<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:weightSum="1"
    tools:context="com.example.jigneshsatam.myapplication.Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20">

        <EditText
            android:id="@+id/calculate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Calculate"
            android:textSize="@dimen/buttonFontSize"
            android:inputType="numberDecimal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.80"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            style="@style/buttonHolderLayout">
            <Button
                android:id="@+id/left_bracket"
                android:text="("
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/right_bracket"
                android:text=")"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/del"
                android:text="DEL"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/clear"
                android:text="AC"
                style="@style/buttonStyle" />
        </LinearLayout>
        <LinearLayout
            style="@style/buttonHolderLayout">

            <Button
                android:id="@+id/seven"
                android:text="7"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/eight"
                android:text="8"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/nine"
                android:text="9"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/divide"
                android:text="/"
                style="@style/buttonStyle" />
        </LinearLayout>
        <LinearLayout
            style="@style/buttonHolderLayout">

            <Button
                android:id="@+id/four"
                android:text="4"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/five"
                android:text="5"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/six"
                android:text="6"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/multiply"
                android:text="*"
                style="@style/buttonStyle" />
        </LinearLayout>
        <LinearLayout
            style="@style/buttonHolderLayout">

            <Button
                android:id="@+id/one"
                android:text="1"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/two"
                android:text="2"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/three"
                android:text="3"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/subtract"
                android:text="-"
                style="@style/buttonStyle" />
        </LinearLayout>
        <LinearLayout
            style="@style/buttonHolderLayout">

            <Button
                android:id="@+id/dot"
                android:text="."
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/zero"
                android:text="0"
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/equal"
                android:text="="
                style="@style/buttonStyle" />

            <Button
                android:id="@+id/add"
                android:text="+"
                style="@style/buttonStyle" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
